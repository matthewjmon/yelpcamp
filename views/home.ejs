<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/home.css">
  </head>

  <body class="bg-dark text-white">

    <!-- Responsive Navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-transparent">
      <div class="container">
        <a class="navbar-brand fw-semibold" href="/">YelpCamp</a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/campgrounds">Campgrounds</a>
            </li>

            <% if(!currentUser) { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="d-flex align-items-center text-center" style="min-height: 80vh;">
      <div class="container">
        <h1 class="display-4 fw-bold mb-3">YelpCamp</h1>

        <p class="lead mb-4">
          Welcome to YelpCamp.<br />
          Explore campgrounds, share your own, and review others.
        </p>

        <a href="/campgrounds" class="btn btn-light btn-lg fw-bold text-dark">
          View Campgrounds
        </a>
      </div>
    </section>

    <footer class="text-center text-white-50 py-3">
      &copy; 2025 Matthew Monaghan
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>

